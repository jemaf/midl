<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:baselineAligned="false"
	android:orientation="vertical" android:layout_height="wrap_content">
	<TextView android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Username" android:layout_height="wrap_content"
		android:id="@+id/textView1" android:layout_width="wrap_content"
		android:layout_gravity="center"></TextView>
	<EditText android:layout_height="wrap_content" android:id="@+id/editText1" android:layout_gravity="center" android:layout_weight="1" android:layout_width="match_parent" android:layout_margin="15dip" android:inputType="textPassword"></EditText>
	<TextView android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Password" android:layout_height="wrap_content"
		android:id="@+id/textView2" android:layout_width="wrap_content"
		android:layout_gravity="center"></TextView>
	<EditText android:layout_height="wrap_content" android:id="@+id/editText2"
		android:layout_width="match_parent" android:inputType="textPassword"
		android:layout_weight="1" android:layout_margin="15dip"
		android:layout_gravity="center"></EditText>
	<Button android:layout_height="wrap_content"
		android:layout_gravity="center" android:layout_weight="1"
		android:layout_width="wrap_content" android:id="@+id/button1"
		android:text="Log in" android:layout_margin="15dip"></Button>
</LinearLayout>
